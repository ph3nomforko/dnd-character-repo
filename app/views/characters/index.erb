<h2>Created Adventurers</h2>

<% if @characters.any? %>
<a href="/characters/new">Create your first adventurer!</a>
<% end %>
<% @characters.each do |character| %>
    <% if character.user.id == current_user.id %>
        <a href="/characters/<%= character.id %>"><%= character.character_name %></a>
        <%= character.level %><br>
    <% end %>
<% end %>