  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />

    <title>D&D Character Vault</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/stylesheets/main.css" />
  </head>
  <body>

    <div class="topnav">
      <% if logged_in? %>
        <h1 style="color: white; text-align: center;"><%= current_user.name %>'s D&D Character Repository</h1>
        <a href="/characters">Your Characters</a>
        <a href="/characters/new">Create a Character</a>
        <div class="topnav-right">
          <a href="/logout">Logout</a>
        </div>
      <% else %>
        <h1 style="color: white; text-align: center;">D&D Character Repository</h1>
      <% end %>
    </div>


    <div class="wrapper">
      <% if flash[:message] %>
        <h4 style="color: green;"><%= flash[:message] %></h4>
      <% end %>
      
      <% if flash[:error] %>
        <h4 style="color: red;"><%= flash[:error] %></h4>
      <% end %>
      
      <%= yield %>

      <footer class="branding">
        <small>&copy; 2021 <strong>D&D Character Repository</strong></small>
      </footer>
    </div>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
    <!--[if lt IE 7]>
      <script src="//ajax.googleapis.com/ajax/libs/chrome-frame/1.0.2/CFInstall.min.js"></script>
      <script>window.attachEvent("onload",function(){CFInstall.check({mode:"overlay"})})</script>
    <![endif]-->
  </body>
</html>
