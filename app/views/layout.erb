  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />

    <title>D&D Character Vault</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/stylesheets/main.css" />
  </head>
  <body>
    <% if logged_in? %>
      <div class="topnav">
          <a href="/logout">Logout</a>
          <a href="/characters">Your Characters</a>
          <a href="/characters/new">Create a Character</a><br>
          <h2><%= current_user.name %>'s Vault</h2>

      </div>
    <% end %>

    <% if flash[:message] %>
      <h4><%= flash[:message] %></h4>
    <% end %>

    <div class="wrapper">
    
        <%= yield %>

      <footer class="branding">
        <small>&copy; 2021 <strong>D&D Character Repository</strong></small>
      </footer>
    </div>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
